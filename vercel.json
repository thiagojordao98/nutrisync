{
    "version": 2,
    "builds": [
      {
        "src": "nutrisync/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
      },
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "static"
        }
      }
    ],
    "routes": [
      {
        "src": "/templates/static/(.*)",
        "dest": "/templates/static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "nutrisync/wsgi.py"
      }
    ]
  }